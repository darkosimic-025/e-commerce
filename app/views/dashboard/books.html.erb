<%= turbo_frame_tag "content" do %>
  <div class="p-5 h-screen w-full bg-gray-100">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-xl mb-2">Books</h1>
      <%= link_to "Add Book", new_book_path, data: { turbo_frame: 'modal' }, class: "bg-primary-700 text-white rounded-lg px-5 py-2.5" %>
    </div>

    <div class="overflow-auto rounded-lg shadow hidden md:block">
      <table class="w-full">
        <thead class="bg-gray-50 border-b-2 border-gray-200">
        <tr>
          <th class="w-20 p-3 text-sm font-semibold tracking-wide text-left">No.</th>
          <th class="p-3 text-sm font-semibold tracking-wide text-left">Title</th>
          <th class="p-3 text-sm font-semibold tracking-wide text-left">Author</th>
          <th class="p-3 text-sm font-semibold tracking-wide text-left">Genre</th>
          <th class="p-3 text-sm font-semibold tracking-wide text-left">Price</th>
          <th class="w-24 p-3 text-sm font-semibold tracking-wide text-left">Actions</th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
        <% @books.each_with_index do |book, index| %>
          <tr class="bg-white">
            <td class="p-3 text-sm text-gray-700 whitespace-nowrap">
              <%= index + 1 %>
            </td>
            <td class="p-3 text-sm text-gray-700 whitespace-nowrap">
              <a href="<%= book_path(book) %>" class="text-blue-500 font-bold hover:underline"><%= book.title %></a>
            </td>
            <td class="p-3 text-sm text-gray-700 whitespace-nowrap">
              <%= book.author %>
            </td>
            <td class="p-3 text-sm text-gray-700 whitespace-nowrap">
              <%= book.genre.name %>
            </td>
            <td class="p-3 text-sm text-gray-700 whitespace-nowrap">
              <%= number_to_currency(book.price) %>
            </td>
            <td class="p-3 text-sm text-gray-700 whitespace-nowrap">
              <%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <!-- Mobile view -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:hidden">
      <% @books.each_with_index do |book, index| %>
        <div class="bg-white space-y-3 p-4 rounded-lg shadow">
          <div class="flex items-center space-x-2 text-sm">
            <div class="text-gray-500">#<%= index + 1 %></div>
            <div>
              <a href="<%= book_path(book) %>" class="text-blue-500 font-bold hover:underline"><%= book.title %></a>
            </div>
          </div>
          <div class="text-sm text-gray-700">
            <p>Author: <%= book.author %></p>
            <p>Genre: <%= book.genre.name %></p>
            <p>Price: <%= number_to_currency(book.price) %></p>
          </div>
          <div>
            <%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
