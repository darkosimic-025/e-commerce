<div class="rounded-lg border bg-white p-4 shadow-sm dark:border-gray-700 dark:bg-gray-800 sm:p-6">
  <p class="text-xl font-semibold text-gray-900 dark:text-white">Order summary</p>

  <div class="mt-6 space-y-4">
    <dl class="flex justify-between">
      <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Total</dt>
      <dd class="text-sm font-bold text-gray-900 dark:text-white">
        <%= number_to_currency(@cart_items.sum { |item| item[:book].price * item[:quantity] }) %>
      </dd>
    </dl>
  </div>
  <%= button_to 'Checkout with Stripe', stripe_checkout_carts_path, method: :post, class: "mb-2 inline-flex w-full items-center justify-center rounded-lg bg-primary-700 px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
</div>
